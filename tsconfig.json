{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "baseUrl": "./assets",
  "paths": {
    "@/*": ["./javascript/*"],
    "@images/*": ["./images/*"],
    "@styles/*": ["./styles/*"]
  },
  "exclude": ["node_modules"],
  "include": [
    "assets/**/*.ts",
    "assets/**/*.tsx",
    "assets/**/*.js",
    "assets/**/*.jsx"
  ]
}
